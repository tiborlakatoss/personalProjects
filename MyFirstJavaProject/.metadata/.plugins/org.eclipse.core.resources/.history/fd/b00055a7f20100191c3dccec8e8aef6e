package com.sda.tibi.fundamentals.moreHomework;

import java.util.Arrays;
import java.util.Scanner;

public class integerSumAdd {

	public static void main(String[] args) {
//		33. Write a Java program and compute the sum of the digits of an integer. Go to the editor
//		Input Data:
//		Input an integer: 25
//		Expected Output
//		The sum of the digits is: 7
		Scanner scan = new Scanner(System.in);
		System.out.println("enter your first digit: ");
		int firstPosition = scan.nextInt();
		System.out.println("enter your second digit: ");
		int secondPosition = scan.nextInt();
		System.out.println("the total is: ");
		int[][] total = new int[firstPosition][secondPosition];
		int[] positions = new int[firstPosition + secondPosition];

		System.out.println(Arrays.toString(positions));

	}

}
